
stock_prices = {
    'AAPL': 190.00,
    'MSFT': 410.00,
    'GOOG': 2800.00,
    'TSLA': 750.00,
    'AMZN': 130.00
}
portfolio = {}
print("üìà Enter stock symbol and quantity (type 'done' to finish):")
while True:
    symbol = input("Stock Symbol: ").upper()
    if symbol == 'DONE':
        break
    if symbol not in stock_prices:
        print("‚ùå Stock not found in price list. Try again.")
        continue
    try:
        quantity = int(input(f"Quantity of {symbol}: "))
        if quantity < 0:
            print("‚ùå Quantity cannot be negative.")
            continue
        portfolio[symbol] = quantity
    except ValueError:
        print("‚ùå Please enter a valid number.")

# Display portfolio and calculate total
total_value = 0
output_lines = []
print("\nüìä Your Portfolio Summary:")
print("{:<10} {:<10} {:<15} {:<15}".format("Symbol", "Qty", "Price", "Value"))
for symbol, qty in portfolio.items():
    price = stock_prices[symbol]
    value = qty * price
    total_value += value
    print("{:<10} {:<10} ${:<14.2f} ${:<14.2f}".format(symbol, qty, price, value))
    output_lines.append(f"{symbol},{qty},{price},{value}\n")

print(f"\nüí∞ Total Investment Value: ${total_value:.2f}")
save = input("\nüíæ Save to CSV file? (y/n): ").lower()
if save == 'y':
    with open("portfolio.csv", "w") as f:
        f.write("Symbol,Quantity,Price,Value\n")
        f.writelines(output_lines)
        f.write(f"\nTotal,,,{total_value}\n")
    print("‚úÖ Portfolio saved to 'portfolio.csv'")
